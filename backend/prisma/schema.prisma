generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ================================
// Modelo User - Completo e profissional
// ================================
model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  password     String   // será encriptada com bcrypt no backend
  fullName     String?
  displayName  String?
  username     String?  @unique
  profession   String?
  website      String?
  location     String?
  bio          String?
  profilePhoto String?  // URL da foto (Cloudinary, Supabase Storage, etc)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  lastLogin    DateTime?

  // Relações
  events       Event[]
  youtubeToken YouTubeToken?  // Um usuário pode ter no máximo um conjunto de tokens do YouTube

  @@map("users")
}

// ================================
// Modelo Event - Otimizado para calendário
// ================================
model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  platform    String   // YouTube, TikTok, Instagram, Facebook
  type        String   // video, short, reel, live, post
  date        DateTime // data e hora do agendamento
  isBestTime  Boolean  @default(false)
  status      String   @default("scheduled") // scheduled, published, draft, cancelled
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relação: evento pertence a um usuário
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  @@map("events")
}

// ================================
// Modelo YouTubeToken - Tokens OAuth do YouTube por usuário
// ================================
model YouTubeToken {
  id            Int      @id @default(autoincrement())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        Int      @unique  // Garante apenas um registro por usuário

  accessToken   String
  refreshToken  String?  // Pode ser null na primeira autenticação se não for offline
  expiryDate    BigInt?  // Timestamp em milissegundos (como o googleapis retorna)
  scope         String   // Scopes concedidos (para auditoria)
  tokenType     String?  // geralmente "Bearer"
  idToken       String?  // Opcional: útil para obter email/sub do Google

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("youtube_tokens")
}